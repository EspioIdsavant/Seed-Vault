<?xml version="1.0" encoding="UTF-8"?>
<ModMetaData>
    <name>Seed Vault</name>
    <author>Espio Idsavant</author>
    <packageId>espio.seedvault</packageId>
    <description>Intended to be used with SeedsPlease: lite and LWM's Deep Storage, this introduces Seed Vault storage items that can only contain seeds, but can store a massive amount of them.  Art provided by .Phaneron! Additional graphics unlocked with Vanilla Furniture Expanded.</description>
    <modVersion>1.1</modVersion>
    <supportedVersions>
        <li>1.4</li>
    </supportedVersions>
    <modDependencies>
        <li>
            <packageId>owlchemist.seedspleaselite</packageId>
            <displayName>SeedsPlease: lite</displayName>
            <steamWorkshopUrl>steam://url/CommunityFilePage/2586052937</steamWorkshopUrl>
            <downloadUrl>https://github.com/Owlchemist/RimWorld-SeedsPlease</downloadUrl>
        </li>
        <li>
            <packageId>lwm.deepstorage</packageId>
            <displayName>LWM's Deep Storage</displayName>
            <steamWorkshopUrl>steam://url/CommunityFilePage/1617282896</steamWorkshopUrl>
            <downloadUrl>https://github.com/lilwhitemouse/RimWorld-LWM.DeepStorage</downloadUrl>
        </li>
    </modDependencies>
    <loadAfter>
        <li>owlchemist.seedspleaselite</li>
        <li>lwm.deepstorage</li>
        <li>VanillaExpanded.VFECore</li>
    </loadAfter>
</ModMetaData>
